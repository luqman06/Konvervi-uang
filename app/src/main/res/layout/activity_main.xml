<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="351dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_bank" />

    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/uang_input"
            android:inputType="numberDecimal"
            android:hint="0 Rupiah"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="="
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/hasil_Korvensi"
            android:text="Hasil Konversi"
            android:background="#FFFFFF"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Rp > USD"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:onClick="toUSD"
        android:id="@+id/rpusd"/>


    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="RP > YEN"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:onClick="toYEN"
        android:id="@+id/rpyen"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:text="RP > EURO"
        android:onClick="toEURO"
        android:id="@+id/rpeuro"/>



</LinearLayout>